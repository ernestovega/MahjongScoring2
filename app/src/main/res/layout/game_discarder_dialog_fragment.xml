<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/second_standard_margin"
        android:layout_marginBottom="@dimen/standard_margin"
        android:gravity="center"
        android:text="@string/discarder_"
        android:textAllCaps="true"
        android:textColor="@color/grayMM"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.etologic.mahjongscoring2.app.custom_views.CustomDiscarderSelector
        android:id="@+id/cdsDiscarderConfirmDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/standard_margin"
        android:gravity="center" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/standard_margin"
        android:layout_marginBottom="@dimen/standard_margin"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btDiscarderConfirmDialogCancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/btDiscarderConfirmDialogOk"
            android:text="@string/cancel"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/btDiscarderConfirmDialogOk"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-2dp"
            android:text="@string/ok"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>

</LinearLayout>