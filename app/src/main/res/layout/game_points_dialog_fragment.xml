<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:padding="@dimen/standard_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDiscarderSelectorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_discarder"
        android:layout_gravity="start"
        android:textColor="@color/grayMM"
        android:textStyle="bold"
        />

    <com.etologic.mahjongscoring2.app.custom_views.CustomDiscarderSelector
        android:id="@+id/cdsPointsDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    <com.etologic.mahjongscoring2.app.custom_views.CustomNumPad
        android:id="@+id/cnpPointsDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btPointsDialogCancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/btPointsDialogOk"
            android:text="@android:string/cancel"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/btPointsDialogOk"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-2dp"
            android:text="@android:string/ok"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>

</LinearLayout>