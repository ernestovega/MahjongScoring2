<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/llGameTableRoundNumberAndIconContainerHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/table_header_height"
        android:gravity="bottom"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tvGameTableRoundNumberTopStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/double_standard_margin"
            android:drawablePadding="@dimen/half_standard_margin"
            android:drawableTint="@color/grayMM"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:rotation= "-215"
            android:textColor="@color/grayMM"
            android:textSize="@dimen/table_player_round_num_text_size"
            tools:drawableBottom="@drawable/ic_east"
            tools:targetApi="m"
            tools:text="16" />

        <TextView
            android:id="@+id/tvGameTableRoundNumberTopEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/double_standard_margin"
            android:drawablePadding="@dimen/half_standard_margin"
            android:drawableTint="@color/grayMM"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:rotation="215"
            android:textColor="@color/grayMM"
            android:textSize="@dimen/table_player_round_num_text_size"
            tools:drawableBottom="@drawable/ic_east"
            tools:targetApi="m"
            tools:text="16" />

    </RelativeLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcvGameTableSeats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llGameTableRoundNumberAndIconContainerFooter"
        android:layout_below="@+id/llGameTableRoundNumberAndIconContainerHeader"
        android:tag="GameTableSeatsFragment" />

    <RelativeLayout
        android:id="@+id/llGameTableRoundNumberAndIconContainerFooter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/table_header_height"
        android:gravity="top"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tvGameTableRoundNumberBottomStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/double_standard_margin"
            android:drawablePadding="@dimen/half_standard_margin"
            android:drawableTint="@color/grayMM"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:rotation="45"
            android:textColor="@color/grayMM"
            android:textSize="@dimen/table_player_round_num_text_size"
            tools:drawableBottom="@drawable/ic_east"
            tools:targetApi="m"
            tools:text="16" />

        <TextView
            android:id="@+id/tvGameTableRoundNumberBottomEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/double_standard_margin"
            android:drawablePadding="@dimen/half_standard_margin"
            android:drawableTint="@color/grayMM"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:visibility="gone"
            android:rotation="-45"
            android:textColor="@color/grayMM"
            android:textSize="@dimen/table_player_round_num_text_size"
            tools:drawableBottom="@drawable/ic_east"
            tools:targetApi="m"
            tools:text="16"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabGameTableDice"
        android:layout_width="@dimen/quadruple_standard_margin"
        android:layout_height="@dimen/quadruple_standard_margin"
        tools:layout_alignParentEnd="true"
        tools:layout_alignParentBottom="true"
        android:layout_margin="@dimen/standard_margin"
        android:src="@drawable/ic_dice_multiple_white_24dp" />

</RelativeLayout>