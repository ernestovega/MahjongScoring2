<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/centerAnchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <fragment
        android:id="@+id/fGameTableSeatEast"
        android:name="es.etologic.mahjongscoring2.app.game.game_table.GameTableSeatEastFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/centerAnchor"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <fragment
        android:id="@+id/fGameTableSeatSouth"
        android:name="es.etologic.mahjongscoring2.app.game.game_table.GameTableSeatSouthFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/centerAnchor"
        android:layout_toLeftOf="@+id/centerAnchor"
        android:rotation="90" />

    <fragment
        android:id="@+id/fGameTableSeatWest"
        android:name="es.etologic.mahjongscoring2.app.game.game_table.GameTableSeatWestFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/centerAnchor"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <fragment
        android:id="@+id/fGameTableSeatNorth"
        android:name="es.etologic.mahjongscoring2.app.game.game_table.GameTableSeatNorthFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/centerAnchor"
        android:layout_toRightOf="@+id/centerAnchor" />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/famGameTable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/half_standard_margin"
        android:paddingRight="@dimen/half_standard_margin"
        android:paddingBottom="@dimen/half_standard_margin"
        android:src="@drawable/ic_add_white_24dp"
        app:fab_colorNormal="@color/colorPrimary"
        app:fab_colorPressed="@color/colorPrimaryDark"
        app:fab_colorRipple="@color/colorPrimaryDark"
        app:menu_animationDelayPerItem="20"
        app:menu_labels_colorNormal="@color/gray"
        app:menu_labels_colorRipple="@color/grayMM"
        app:menu_labels_ellipsize="end"
        app:menu_labels_singleLine="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabGameTablePenaltyCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_penalty_white"
            app:fab_colorNormal="@color/red"
            app:fab_colorPressed="@color/redDark"
            app:fab_colorRipple="@color/redDark"
            app:fab_label="@string/cancel_penalty"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabGameTablePenalty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_penalty_white"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_colorPressed="@color/colorPrimaryDark"
            app:fab_colorRipple="@color/colorPrimaryDark"
            app:fab_label="@string/isPenalized"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabGameTableWashout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_flag_white"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_colorPressed="@color/colorPrimaryDark"
            app:fab_colorRipple="@color/colorPrimaryDark"
            app:fab_label="@string/draw"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabGameTableTsumo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_trophy_white_18dp"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_colorPressed="@color/colorPrimaryDark"
            app:fab_colorRipple="@color/colorPrimaryDark"
            app:fab_label="@string/hu_wall"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabGameTableRon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_medal_white"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_colorPressed="@color/colorPrimaryDark"
            app:fab_colorRipple="@color/colorPrimaryDark"
            app:fab_label="@string/hu_discard"
            app:fab_size="mini" />

    </com.github.clans.fab.FloatingActionMenu>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fabGameTableCancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/half_standard_margin"
        android:layout_marginRight="@dimen/half_standard_margin"
        android:layout_marginBottom="@dimen/half_standard_margin"
        android:rotation="45"
        android:src="@drawable/fab_add"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/llGameTableRankingContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDarkTransparent"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <include layout="@layout/game_table_ranking_dialog_fragment" />

    </LinearLayout>

</RelativeLayout>