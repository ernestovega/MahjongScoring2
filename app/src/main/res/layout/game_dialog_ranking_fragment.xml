<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/grayLight"
    tools:ignore="Overdraw">

    <TableLayout
        android:id="@+id/tlRanking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="480dp"
        android:orientation="horizontal"
        android:padding="20dp">

        <TableRow style="@style/TableRowRankingDialog">

            <TextView
                android:layout_marginBottom="@dimen/second_standard_margin"
                android:layout_weight="12"
                android:text="@string/final_results"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/grayMM"
                android:textStyle="bold" />

        </TableRow>

        <TableRow style="@style/TableRowRankingDialog">

            <ImageView
                android:id="@+id/tvRankingDialogPlayer1Position"
                style="@style/TextViewRankingDialogTableContent"
                android:layout_weight="2"
                android:contentDescription="@string/_1st"
                android:src="@drawable/ic_trophy_golden"
                app:tint="@color/golden" />

            <TextView
                android:id="@+id/tvRankingDialogPlayer1Name"
                style="@style/TextViewRankingDialogTableContent"
                android:layout_marginStart="@dimen/standard_margin"
                android:layout_marginEnd="@dimen/standard_margin"
                android:layout_weight="6"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:ignore="HardcodedText"
                tools:text="Player 1" />

            <TextView
                android:id="@+id/tvRankingDialogPlayer1Points"
                style="@style/TextViewRankingDialogTableContent"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:ignore="HardcodedText"
                tools:text="4" />

            <TextView
                android:id="@+id/tvRankingDialogPlayer1Score"
                style="@style/TextViewRankingDialogTableContent"
                android:layout_weight="3"
                tools:ignore="HardcodedText"
                tools:text="200" />
        </TableRow>

        <TableRow style="@style/TableRowRankingDialog">

            <TextView
                android:id="@+id/tvRankingDialogPlayer2Position"
                style="@style/TextViewRankingDialogTableContent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/_2nd"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/tvRankingDialogPlayer2Name"
                style="@style/TextViewRankingDialogTableContent"
                android:layout_marginStart="@dimen/standard_margin"
                android:layout_marginEnd="@dimen/standard_margin"
                android:layout_weight="6"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:ignore="HardcodedText"
                tools:text="Player 2" />

            <TextView
                android:id="@+id/tvRankingDialogPlayer2Points"
                style="@style/TextViewRankingDialogTableContent"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:ignore="HardcodedText"
                tools:text="2" />

            <TextView
                android:id="@+id/tvRankingDialogPlayer2Score"
                style="@style/TextViewRankingDialogTableContent"
                android:layout_weight="3"
                tools:ignore="HardcodedText"
                tools:text="100" />
        </TableRow>

        <TableRow style="@style/TableRowRankingDialog">

            <TextView
                android:id="@+id/tvRankingDialogPlayer3Position"
                style="@style/TextViewRankingDialogTableContent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/_3rd"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/tvRankingDialogPlayer3Name"
                style="@style/TextViewRankingDialogTableContent"
                android:layout_marginStart="@dimen/standard_margin"
                android:layout_marginEnd="@dimen/standard_margin"
                android:layout_weight="6"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:ignore="HardcodedText"
                tools:text="Player 3" />

            <TextView
                android:id="@+id/tvRankingDialogPlayer3Points"
                style="@style/TextViewRankingDialogTableContent"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:ignore="HardcodedText"
                tools:text="1" />

            <TextView
                android:id="@+id/tvRankingDialogPlayer3Score"
                style="@style/TextViewRankingDialogTableContent"
                android:layout_weight="3"
                tools:ignore="HardcodedText"
                tools:text="-100" />
        </TableRow>

        <TableRow style="@style/TableRowRankingDialog">

            <TextView
                android:id="@+id/tvRankingDialogPlayer4Position"
                style="@style/TextViewRankingDialogTableContent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/_4th"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/tvRankingDialogPlayer4Name"
                style="@style/TextViewRankingDialogTableContent"
                android:layout_marginStart="@dimen/standard_margin"
                android:layout_marginEnd="@dimen/standard_margin"
                android:layout_weight="6"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:ignore="HardcodedText"
                tools:text="Player 4" />

            <TextView
                android:id="@+id/tvRankingDialogPlayer4Points"
                style="@style/TextViewRankingDialogTableContent"
                android:layout_weight="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                tools:ignore="HardcodedText"
                tools:text="0" />

            <TextView
                android:id="@+id/tvRankingDialogPlayer4Score"
                style="@style/TextViewRankingDialogTableContent"
                android:layout_weight="3"
                tools:ignore="HardcodedText"
                tools:text="-200" />

        </TableRow>

    </TableLayout>

    <View
        android:id="@+id/vGameRankingDialogSeparator1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tlRanking"
        android:layout_margin="@dimen/standard_margin"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/llRankingDialogBestHand"
        style="@style/tvRankingDialogOthers"
        android:layout_width="match_parent"
        android:layout_below="@+id/vGameRankingDialogSeparator1"
        android:layout_marginEnd="@dimen/standard_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRankingDialogBestHandTitle"
            style="@style/tvRankingDialogOthers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="16sp"
            tools:text="@string/best_hand" />

        <TextView
            android:id="@+id/tvRankingDialogBestHandPlayerPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/second_standard_margin"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="@color/grayMM"
            tools:ignore="HardcodedText"
            tools:text="119" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_margin"
            android:layout_marginEnd="@dimen/standard_margin"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="-"
            android:textColor="@color/grayMM"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvRankingDialogBestHandPlayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/grayMM"
            tools:ignore="HardcodedText"
            tools:text="Juanito nombre largo" />

    </LinearLayout>

    <View
        android:id="@+id/vGameRankingDialogSeparator2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/llRankingDialogBestHand"
        android:layout_margin="@dimen/standard_margin"
        android:background="@color/gray" />

    <Button
        android:id="@+id/btRankingDialogResume"
        style="?android:buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vGameRankingDialogSeparator2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/standard_and_half_margin"
        android:layout_marginTop="@dimen/standard_margin"
        android:text="@string/resume" />

    <Button
        android:id="@+id/btRankingDialogShare"
        style="?android:buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vGameRankingDialogSeparator2"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_toStartOf="@+id/btRankingDialogOk"
        android:text="@string/share" />

    <Button
        android:id="@+id/btRankingDialogOk"
        style="?android:buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vGameRankingDialogSeparator2"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_marginEnd="@dimen/standard_margin"
        android:layout_marginBottom="@dimen/standard_margin"
        android:text="@string/ok" />

</RelativeLayout>