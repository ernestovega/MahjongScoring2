<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:background="@android:color/white">

    <es.etologic.mahjongscoring2.app.custom_views.CustomDiscarderSelector
        android:id="@+id/cdsPointsDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/standard_margin"
        android:background="@color/grayMM" />-->

    <es.etologic.mahjongscoring2.app.custom_views.CustomNumPad
        android:id="@+id/cnpPointsDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/double_standard_margin"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/standard_margin">

        <Button
            android:id="@+id/btPointsDialogCancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/cancel"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/btPointsDialogDraw"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/draw"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/btPointsDialogOk"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/ok"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

</LinearLayout>