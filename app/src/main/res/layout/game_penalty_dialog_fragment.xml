<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginTop="@dimen/standard_margin"
        android:gravity="center"
        android:layout_marginEnd="@dimen/standard_margin"
        android:hint="@string/penalty_points">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietPenaltyDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:digits="0123456789"
            android:maxLength="4"
            android:maxLines="1" />

        <CheckBox
            android:id="@+id/cbPenaltyDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/equally_divided"
            android:layout_marginTop="@dimen/half_standard_margin"
            android:layout_gravity="center"
            android:gravity="center"
            android:checked="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/standard_margin"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btPenaltyDialogCancel"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/close"
                android:textColor="@color/grayMM" />

            <Button
                android:id="@+id/btPenaltyDialogSave"
                style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/standard_margin"
                android:background="@android:color/transparent"
                android:text="@string/save" />

        </LinearLayout>

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>