<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cvOldGameItem"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/half_standard_margin"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="@dimen/cardCornerRadius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_oldgame_height"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/triple_standard_margin"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/tvOldGameItemStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="@dimen/standard_margin"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    tools:text="04/29/2017 12:30"/>

                <TextView
                    android:id="@+id/tvOldGameItemEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/standard_margin"
                    android:layout_marginRight="@dimen/standard_margin"
                    android:layout_toEndOf="@+id/tvOldGameItemStartDate"
                    android:layout_toRightOf="@+id/tvOldGameItemStartDate"
                    android:gravity="center_vertical|end"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    tools:text="04/29/2017 14:30"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="@dimen/standard_margin">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    tools:ignore="NestedWeights">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/llOldGameItemItemPlayerEast"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:ignore="NestedWeights">

                            <TextView
                                android:id="@+id/tvOlgGameItemPlayerEastName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:lines="2"
                                android:textStyle="bold"
                                tools:text="East player"/>

                            <TextView
                                android:id="@+id/tvOldGameItemPlayerEastPoints"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                tools:text="100"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llOldGameItemItemPlayerNorth"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/half_standard_margin"
                            android:layout_marginStart="@dimen/half_standard_margin"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:ignore="NestedWeights">

                            <TextView
                                android:id="@+id/tvOlgGameItemPlayerNorthName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:lines="2"
                                android:textStyle="bold"
                                tools:text="North player"/>

                            <TextView
                                android:id="@+id/tvOldGameItemPlayerNorthPoints"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                tools:text="100"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/llOldGameItemItemPlayerSouth"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:ignore="NestedWeights">

                            <TextView
                                android:id="@+id/tvOlgGameItemPlayerSouthName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:lines="2"
                                android:textStyle="bold"
                                tools:text="South player"/>

                            <TextView
                                android:id="@+id/tvOldGameItemPlayerSouthPoints"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                tools:text="100"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llOldGameItemItemPlayerWest"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/half_standard_margin"
                            android:layout_marginStart="@dimen/half_standard_margin"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:ignore="NestedWeights">

                            <TextView
                                android:id="@+id/tvOlgGameItemPlayerWestName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:lines="2"
                                android:textStyle="bold"
                                tools:text="West player"/>

                            <TextView
                                android:id="@+id/tvOldGameItemPlayerWestPoints"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                tools:text="-300"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/standard_margin"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:layout_weight="2"
                    android:baselineAligned="false"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="NestedWeights">

                    <LinearLayout
                        android:id="@+id/llOldGameItemItemRoundsNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/standard_margin"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/rounds"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvOldGameItemRoundsNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            tools:text="15"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llOldGameItemItemBestHand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/standard_margin"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/best_hand"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvOldGameItemBestHandPlayerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:lines="1"
                            tools:text="Cálico Electrónico"/>

                        <TextView
                            android:id="@+id/tvOldGameItemBestHandValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            tools:text="100"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btOldGameItemDelete"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/half_standard_margin"
                    android:layout_marginRight="@dimen/half_standard_margin"
                    android:layout_toLeftOf="@+id/btOldGameItemResume"
                    android:layout_toStartOf="@+id/btOldGameItemResume"
                    android:text="@string/delete"/>

                <Button
                    android:id="@+id/btOldGameItemResume"
                    style="?android:buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/half_standard_margin"
                    android:layout_marginRight="@dimen/half_standard_margin"
                    android:text="@string/resume"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>