<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlTableSeatRankingContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/llTableSeatRankingFieldsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/tvTableSeatRankingPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="@dimen/table_player_penalty_points_text_size"
            android:textStyle="normal"
            tools:text="@string/_1st"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ivTableSeatRankingSeatWindIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_east" />

        <TextView
            android:id="@+id/tvTableSeatRankingPoints"
            style="@style/TextViewTableSeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="@dimen/table_player_points_text_size"
            tools:text="-000" />

        <TextView
            android:id="@+id/tvTableSeatRankingPenaltyPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp"
            android:textSize="@dimen/table_player_penalty_points_text_size"
            android:textStyle="normal"
            android:visibility="invisible"
            tools:text="@string/_000"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvTableSeatRankingName"
            style="@style/TextViewTableSeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            tools:text="@string/player_name_placeholder" />

    </LinearLayout>

    <include
        android:id="@+id/iGameTableSeatRankingDiffs"
        layout="@layout/custom_diffs_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llTableSeatRankingFieldsContainer"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        tools:visibility="visible" />

</RelativeLayout>