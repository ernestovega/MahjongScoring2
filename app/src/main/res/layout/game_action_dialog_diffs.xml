<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tlActionDialogDiffs"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TableRow>

        <TextView
            style="@style/diffsDialogCell"
            android:text="@string/to_be_by"
            android:textStyle="normal" />

        <TextView
            style="@style/diffsDialogCell"
            android:text="@string/self_pick" />

        <TextView
            style="@style/diffsDialogCell"
            android:text="@string/direct" />

        <TextView
            style="@style/diffsDialogCell"
            android:text="@string/indirect" />

    </TableRow>

    <TableRow android:id="@+id/trActionDialogDiffsFirst">

        <TextView
            style="@style/diffsDialogCell"
            android:text="@string/_1st" />

        <TextView
            android:id="@+id/tvActionDialogDiffsFirstSelfPick"
            style="@style/diffsDialogCell"
            tools:text="8" />

        <TextView
            android:id="@+id/tvActionDialogDiffsFirstDirectHu"
            style="@style/diffsDialogCell"
            tools:text="12" />

        <TextView
            android:id="@+id/tvActionDialogDiffsFirstIndirectHu"
            style="@style/diffsDialogCell"
            tools:text="20" />

    </TableRow>

    <TableRow android:id="@+id/trActionDialogDiffsSecond">

        <TextView
            style="@style/diffsDialogCell"
            android:text="@string/_2nd" />

        <TextView
            android:id="@+id/tvActionDialogDiffsSecondSelfPick"
            style="@style/diffsDialogCell"
            tools:text="8" />

