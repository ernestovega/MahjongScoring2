            android:id="@+id/tvActionDialogDiffsSecondDirectHu"
            style="@style/diffsDialogCell"
            tools:text="12" />

        <TextView
            android:id="@+id/tvActionDialogDiffsSecondIndirectHu"
            style="@style/diffsDialogCell"
            tools:text="20" />

    </TableRow>

    <TableRow android:id="@+id/trActionDialogDiffsThird">

        <TextView
            style="@style/diffsDialogCell"
            android:text="@string/_3rd" />

        <TextView
            android:id="@+id/tvActionDialogDiffsThirdSelfPick"
            style="@style/diffsDialogCell"
            tools:text="8" />

        <TextView
            android:id="@+id/tvActionDialogDiffsThirdDirectHu"
            style="@style/diffsDialogCell"
            tools:text="12" />

        <TextView
            android:id="@+id/tvActionDialogDiffsThirdIndirectHu"
            style="@style/diffsDialogCell"
            tools:text="20" />

    </TableRow>

</TableLayout>