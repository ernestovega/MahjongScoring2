<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <View
        android:id="@+id/vTableSeatsCenter"
        android:layout_width="@dimen/triple_standard_margin"
        android:layout_height="@dimen/triple_standard_margin"
        android:layout_centerInParent="true" />

    <include
        layout="@layout/game_table_seat_east"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vTableSeatsCenter"
        android:layout_centerHorizontal="true" />

    <include
        layout="@layout/game_table_seat_west"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/vTableSeatsCenter"
        android:layout_centerHorizontal="true" />

    <include
        layout="@layout/game_table_seat_south"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/vTableSeatsCenter"
        tools:ignore="RtlHardcoded" />

    <include
        layout="@layout/game_table_seat_north"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/vTableSeatsCenter"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>