<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.BrandedLaunch" parent="AppTheme">
        <item name="android:windowBackground">@drawable/layer_mm_logo</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RippleEffect" parent="AppTheme">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="FullScreenDialogMM" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorBackground">@color/blackTransparent</item>
    </style>

    <style name="AlertDialogStyleMM" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/grayMM</item>
        <item name="android:background">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TableRowRankingDialog" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">12</item>
        <item name="android:layout_margin">@dimen/half_standard_margin</item>
    </style>

    <style name="TextViewRankingDialogTableContent" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/grayMM</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tvRankingDialogOthers" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grayMM</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewTableSeat" parent="AppTheme">
        <item name="android:textColor">@color/grayMM</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">true</item>
    </style>

    <style name="TextViewTableSeatSmall" parent="AppTheme">
        <item name="android:textColor">@color/grayMM</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">true</item>
    </style>

    <style name="TextViewTableSeatMedium" parent="AppTheme">
        <item name="android:textColor">@color/grayMM</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">true</item>
    </style>

    <style name="ButtonHandActionSmall" parent="RippleEffect">
        <item name="android:elevation">8dp</item>
        <item name="android:background">@drawable/button_rounded_corners_green</item>
        <item name="android:paddingStart">@dimen/standard_and_half_margin</item>
        <item name="android:paddingEnd">@dimen/standard_and_half_margin</item>
        <item name="android:paddingTop">@dimen/half_standard_margin</item>
        <item name="android:paddingBottom">@dimen/half_standard_margin</item>
        <item name="android:layout_marginTop">@dimen/standard_and_half_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ButtonHandActionBig" parent="RippleEffect">
        <item name="android:elevation">8dp</item>
        <item name="android:background">@drawable/button_rounded_corners_green</item>
        <item name="android:paddingTop">@dimen/standard_and_half_margin</item>
        <item name="android:paddingStart">@dimen/standard_and_half_margin</item>
        <item name="android:paddingEnd">@dimen/standard_and_half_margin</item>
        <item name="android:paddingBottom">@dimen/standard_and_half_margin</item>
        <item name="android:layout_marginTop">@dimen/standard_and_half_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ButtonNumPad" parent="RippleEffect">
        <item name="android:elevation">4dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextViewGameListItemTotal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
    </style>

    <style name="auxView" parent="AppTheme">
        <item name="android:width">@dimen/third_standard_margin</item>
        <item name="android:layout_width">@dimen/third_standard_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="diffsCell" parent="AppTheme">
        <item name="android:layout_width">@dimen/standard_and_quarter_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>
