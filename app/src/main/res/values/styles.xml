<resources>

    <!-- APP THEME -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- BRANDED LAUNCH-->
    <style name="AppTheme.BrandedLaunch" parent="AppTheme">
        <item name="android:windowBackground">@drawable/layer_mm_logo</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- DIALOG -->
    <style name="AlertDialogStyleMM" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/grayMM</item>
        <item name="android:background">@android:color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- GAME RANKING DIALOG -->
    <style name="trRankingDialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">12</item>
        <item name="android:layout_margin">@dimen/half_standard_margin</item>
    </style>

    <style name="tvDialogRankingTableTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/grayMM</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|start</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="tvRankingDialogTableContent" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/grayMM</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tvRankingDialogOthers">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grayMM</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
