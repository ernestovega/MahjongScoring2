<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.BrandedLaunch" parent="AppTheme">
        <item name="android:windowBackground">@drawable/layer_mm_logo</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AlertDialogStyleMM" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/grayMM</item>
        <item name="android:background">@android:color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="trRankingDialog" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">12</item>
        <item name="android:layout_margin">@dimen/half_standard_margin</item>
    </style>

    <style name="tvDialogRankingTableTitle" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/grayMM</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|start</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="tvRankingDialogTableContent" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/grayMM</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tvRankingDialogOthers" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grayMM</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tvTableSeat" parent="AppTheme">
        <item name="android:textColor">@color/grayMM</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:includeFontPadding">true</item>
    </style>

    <style name="buttonHandAction" parent="AppTheme">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:elevation">8dp</item>
        <item name="android:background">@drawable/button_rounded_corners_green</item>
        <item name="android:paddingTop">@dimen/standard_and_half_margin</item>
        <item name="android:paddingStart">@dimen/standard_and_half_margin</item>
        <item name="android:paddingEnd">@dimen/standard_and_half_margin</item>
        <item name="android:paddingBottom">@dimen/standard_and_half_margin</item>
        <item name="android:layout_marginTop">@dimen/standard_and_half_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="buttonNumPad">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:elevation">4dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">@dimen/quarter_standard_margin</item>
        <item name="android:layout_marginEnd">@dimen/quarter_standard_margin</item>
    </style>

    <style name="RippleForLayout" parent="AppTheme">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>
