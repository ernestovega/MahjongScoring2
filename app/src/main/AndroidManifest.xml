<?xml version="1.0" encoding="utf-8"?>
<manifest package="es.etologic.mahjongscoring2"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.BrandedLaunch"
        android:fullBackupContent="@xml/backup_descriptor">

        <activity android:name=".app.main.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".app.game.GameActivity" android:screenOrientation="portrait"/>

    </application>

</manifest>